@namespace MudExtensions.Docs.Examples

<MudGrid>
    <MudItem xs="12" sm="8" Class="d-flex justify-center">
        <MudPaper Width="200px" Elevation="0">
            <MudTextFieldExtended T="string" Lines="2" Immediate="true" AutoSize="_autosize" Label="AutoSized TextField" Variant="Variant.Filled" ShrinkLabel="_forceShrink" />
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" sm="4">
        <MudStack>
            <MudSwitchM3 @bind-Value="_autosize" Label="AutoSize" Color="Color.Secondary" />
            <MudSwitchM3 @bind-Value="_forceShrink" Label="Shrink Label" Color="Color.Secondary" />
        </MudStack>
    </MudItem>
</MudGrid>

@code {
    bool _autosize = true;
    bool _forceShrink = false;
}